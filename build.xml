<project>
	
	<target name="clean">
		<delete dir="build"/>
	</target>
	
	<path id="classpath">
		<fileset dir="lib/">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<target name="compile">
		<mkdir dir="build"/>
		<javac srcdir="src" destdir="build">
			<classpath refid="classpath"/>
		</javac>
	</target>
	
	<target name="test">
		<exec dir="tests" executable="python" failonerror="true">
			<arg value="test.py"/>
		</exec>
	</target>
	
